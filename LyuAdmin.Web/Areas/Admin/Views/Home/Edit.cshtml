@model LyuAdmin.Users.Dto.UserDto
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">
        @if (Model.Id > 0)
        {
            <span>修改用户: @Model</span>
        }
       
    </h4>
</div>

<div class="modal-body">

    <div class="tabbable-line">
        <ul class="nav nav-tabs ">
            <li class="active">
                <a href="#UserInformationsTab" data-toggle="tab" aria-expanded="true">
                    用户信息
                </a>
            </li>
            <li class="">
                <a href="#RolesTab" data-toggle="tab" aria-expanded="false">
                    角色 <b class="badge badge-primary"><span id="assigned-role-count">1</span></b>
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="box-body tab-pane active" id="UserInformationsTab">
                <form name="UserInformationsForm" role="form" novalidate class="form-validation">

                    <div class="row">
                        <div class="col-sm-4 text-center">
                            <img src="/Common/Images/default-profile-picture.png" width="128" height="128" class="img-thumbnail img-rounded user-edit-dialog-profile-image" />
                        </div>
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label>名字</label>
                                @Html.TextBoxFor(x=>x.Name)
                                <input class="form-control edited" value="admin" type="text" name="Name"
                                       required maxlength="32">
                            </div>

                            <div class="form-group form-md-line-input form-md-floating-label no-hint">
                                <label>姓氏</label>
                                @Html.TextBoxFor(x => x.Surname)
                                <input type="text" name="Surname" class="form-control edited" value="admin"
                                       required maxlength="32">
                            </div>
                        </div>
                    </div>

                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <input type="email" name="EmailAddress" class="form-control edited" value="demo@aspnetzero.com" required maxlength="256">
                        <label>邮箱地址</label>
                    </div>

                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input type="text" disabled="disabled" name="UserName" class="form-control edited"
                               value="admin" required maxlength="32">
                        <label>用户名</label>
                        <span class="help-block">管理用户，不能修改用户名.</span>
                    </div>

                    <div class="md-checkbox-list">
                        <div class="md-checkbox">
                            <input id="EditUser_SetRandomPassword" class="md-check" type="checkbox" name="SetRandomPassword" value="true" />
                            <label for="EditUser_SetRandomPassword">
                                <span class="inc"></span>
                                <span class="check"></span>
                                <span class="box"></span>
                                使用随机密码.
                            </label>
                        </div>
                    </div>

                    <div class="form-group form-md-line-input form-md-floating-label no-hint" style="display
:block">
                        <input id="EditUser_Password" type="password" name="Password" class="form-control"
                               maxlength="32" minlength="6">
                        <label>密码</label>
                    </div>

                    <div class="form-group form-md-line-input form-md-floating-label no-hint" style="display
:block">
                        <input type="password" name="PasswordRepeat" class="form-control" maxlength="32"
                               minlength="6" equalto="#EditUser_Password">
                        <label>密码 (核对)</label>
                    </div>

                    <div class="md-checkbox-list">
                        <div class="md-checkbox">
                            <input id="EditUser_ShouldChangePasswordOnNextLogin" class="md-check" type="checkbox" name="ShouldChangePasswordOnNextLogin" value="true">
                            <label for="EditUser_ShouldChangePasswordOnNextLogin">
                                <span class="inc"></span>
                                <span class="check"></span>
                                <span class="box"></span>
                                下次登录需要修改密码.
                            </label>
                        </div>
                        <div class="md-checkbox">
                            <input id="EditUser_SendActivationEmail" class="md-check" type="checkbox"
                                   name="SendActivationEmail" value="true">
                            <label for="EditUser_SendActivationEmail">
                                <span class="inc"></span>
                                <span class="check"></span>
                                <span class="box"></span>
                                发送激活邮件.
                            </label>
                        </div>
                        <div class="md-checkbox">
                            <input id="EditUser_IsActive" class="md-check" type="checkbox" name="IsActive"
                                   value="true" checked="checked">
                            <label for="EditUser_IsActive">
                                <span class="inc"></span>
                                <span class="check"></span>
                                <span class="box"></span>
                                激活
                            </label>
                        </div>
                    </div>
                    <input type="hidden" name="Id" value="@Model.Id" />

                </form>

            </div>
            <div class="tab-pane" id="RolesTab">

                <div class="md-checkbox-list user-role-checkbox-list">
                    <div class="md-checkbox">
                        <input id="EditUser_Admin" class="md-check" type="checkbox" name="Admin"
                               value="true" checked="checked">
                        <label for="EditUser_Admin">
                            <span class="inc"></span>
                            <span class="check"></span>
                            <span class="box"></span>
                            Admin
                        </label>
                    </div>
                    <div class="md-checkbox">
                        <input id="EditUser_User" class="md-check" type="checkbox" name="User" value="true">
                        <label for="EditUser_User">
                            <span class="inc"></span>
                            <span class="check"></span>
                            <span class="box"></span>
                            User
                        </label>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

<div class="modal-footer">
    <button type="button" class="btn default close-button" data-dismiss="modal">取消</button>
    <button type="button" class="btn blue save-button">
        <i class="fa fa-save"></i> <span>保存</span>
    </button>
</div>